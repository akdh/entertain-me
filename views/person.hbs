        <h1>Update your profile</h1>
        <form method="POST" action="/client/person.html">
            <input type="hidden" name="access_token" value="{{ accessToken }}">
            <div class="form-group">
                <label for="gender">Gender</label>
                <select id="gender" name="gender" class="form-control">
                    <option selected value="">Unspecified</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>
            <div class="form-group">
                <label for="type">Age</label>
                <select id="age" name="age" class="form-control">
                    <option selected value="">Unspecified</option>
                    <option value="<18">Below 18</option>
                    <option value="18-23">18-23</option>
                    <option value="24-29">24-29</option>
                    <option value="30-35">30-35</option>
                    <option value="36-42">36-42</option>
                    <option value="43-48">43-48</option>
                    <option value=">48">Above 48</option>
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Update</button>
            </div>
        </form>
